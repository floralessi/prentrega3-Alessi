nombre = prompt("Como te llamas?");
let fecha = parseInt(prompt("Bienvenido"+nombre+" por favor ingresa en que año naciste"));
let currentTime = new Date()
let edades = currentTime.getFullYear()
menu = "";
let sumaNumeros = edades - fecha;

RemeraA= "REMERA VANS";
RemeraB= "REMERA JAMAICA";
RemeraC= "REMERA OVERSIZE";


const CostoRemeraA = 4500;
const CostoRemeraB = 3000;
const CostoRemeraC = 3500;

function ivaA(peso){
    let impuesto = ((CostoRemeraA * .21)+CostoRemeraA);
    return impuesto;
}

function ivaB(peso){
    let impuesto = ((CostoRemeraB * .21)+CostoRemeraB);
    return impuesto;
}

function ivaC(peso){
    let impuesto = ((CostoRemeraC * .21)+CostoRemeraC);
    return impuesto;
}


    let menu = prompt(nombre+" elige por favor el producto necesitas.\n 1. RemeraA\n 2. RemeraB\n 3. RemeraC\n Presiona S para salir.");
    
    while (menu !="S"){
    switch(menu){
    case"1":
    alert("Tu necesitas "+RemeraA+". Tiene un costo de "+CostoRemeraA);
    let compraA = prompt("Escribe F para comprar "+RemeraA);
    if (compraA ==="F"){
        let totalA = ivaA(CostoRemeraA);
        alert("Precio total es de $"+totalA);
        }
    else{
    compraA=alert("Si lo compras? Escribe F")
    }
    break;
    case"2":
    alert("Tu necesitas "+RemeraB+". Tiene un costo de "+CostoRemeraB);
    let compraB = prompt("Escribe F para comprar "+RemeraB);
    if (compraB ==="F"){
        let totalB = ivaB(CostoRemeraB);
        alert("Precio total es de $"+totalB);
    }else{
    compraB=alert("Si lo compras? Escribe F")
    } break;
    case"3":
    alert("Tu necesitas "+RemeraC+". Tiene un costo de "+CostoRemeraC);
    let compraC = prompt("Escribe F para comprar "+RemeraC);
    if (compraC ==="F"){
        let totalC = ivaC(CostoRemeraC);
        alert("Precio total es de $"+totalC);
    }else{
    compraB=alert("Si lo compras? Escribe F")
    } break;
    default:
    alert("Número inválido. elige por favor el número del producto que necesitas.\n 1. RemeraA\n 2. RemeraB\n 3. RemeraC\n Presiona S para salir.");
    break;
    }
    menu = prompt("Gracias "+nombre+" elige por favor el número del producto que necesitas.\n 1. RemeraA\n 2. RemeraB\n 3. RemeraC\n Presiona S para salir.");
    }
    
   


